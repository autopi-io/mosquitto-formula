
{%- set source_engine = salt['pillar.get']('mosquitto:server:source:engine') %}

{%- load_yaml as base_defaults %}
{%- if source_engine == 'git' %}
Debian:
  pkgs:
  - python-psycopg2
  dir:
    base: /srv/mosquitto/venv
    home: /var/lib/mosquitto
    workspace: /srv/mosquitto/workspace
RedHat:
  pkgs:
  - python-psycopg2
  dir:
    base: /srv/mosquitto/venv
    home: /var/lib/mosquitto
    workspace: /srv/mosquitto/workspace
{%- else %}
Debian:
  pkgs:
  - mosquitto
  dir:
    base: /usr/lib/mosquitto
{%- endif %}
{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('mosquitto:server')) %}